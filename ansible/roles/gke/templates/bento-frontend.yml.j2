kind: Deployment
apiVersion: apps/v1
metadata:
  name: bento-frontend
spec:
  replicas: 1
  selector:
      matchLabels:
          app: bento
  template:
    metadata:
      name: bento-frontend
      labels:
        app: bento
        role: frontend
    spec:
      containers:
      - name: frontend
        image: gcr.io/{{gcp_project}}/bento-frontend:{{tag}}
        resources:
          limits:
            memory: "500Mi"
            cpu: "100m"
        imagePullPolicy: Always
        readinessProbe:
          httpGet:
            path: /
            port: 80
        ports:
        - name: frontend
          containerPort: 80